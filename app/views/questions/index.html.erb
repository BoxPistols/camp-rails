<h2>質問一覧</h2>

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#id</th>
                    <th scope="col">title</th>
                    <th scope="col">Menu</th>
                </tr>
            </thead>
            <tbody>
                <% @questions.each do |qs| %>
                    <tr>
                        <td>
                            <%= qs.id %>
                        </td>
                        <td>
                            <%= link_to qs.title, question_path(qs) %>  
                        <td>
                            [<%= link_to "編集" , edit_question_path(qs) %>] [<%= link_to "削除" , question_path(qs),
                                    method: :delete, data:{confirm: "削除して良いですか？" } %>]
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
    </div>

    <div class="row">
        <%= link_to 'New question' , new_question_path %>
    </div>
</div>
